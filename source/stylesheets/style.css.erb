body{
}
div#background{
  -webkit-background-size: 240px 568px;
  background: #000000 url(<%= image_path 'background.jpg' %>) no-repeat fixed top right;
  height: 100%;
  left: 0;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: -1;
}
div#container{
  max-width: 640px;
  margin: 0 auto;
}
h1{
  margin: 0;
  padding: 0;
}
img#logo{
  height: 160px;
  width: 300px;
}
article{
  background: #ffffff;
  border-color: #333333;
  border-radius: 4px;
  border-style: solid;
  border-width: 0 1px 1px 0px;
  margin: 2em 0;
  opacity: 0.7;
  padding: 1px 8px;
}
